<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc"
    tools:context=".GoBooking.GoBookingGunungRinjani">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarDetailRinjani"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTabs" />

    <ImageView
        android:id="@+id/ivRinjani"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbarDetailRinjani"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:src="@drawable/gunung_rinjani" />

    <LinearLayout
        android:id="@+id/lineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivRinjani"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gunung Rinjani"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Provinsi Nusa Tenggara Barat" />

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabRinjani"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lineText"
        app:tabMode="fixed" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerRinjani"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabRinjani"
        android:layout_margin="10dp" />

</RelativeLayout>